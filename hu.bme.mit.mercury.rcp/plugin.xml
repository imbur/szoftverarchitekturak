      <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               ratio="0.25f"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               ratio="0.65f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
           <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="top"
               id="hu.bme.mit.mercury.rcp.view">
         </view>
      </perspectiveExtension>
   </extension>
