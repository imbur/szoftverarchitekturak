<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="hu.bme.mit.mercury.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="hu.bme.mit.mercury.rcp.Perspective"
            id="hu.bme.mit.mercury.rcp.perspective">
      </perspective>
   </extension>
 <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="hu.bme.mit.mercury.rcp.View"
            id="hu.bme.mit.mercury.rcp.view">
      </view>
